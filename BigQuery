const { BigQuery } = require('@google-cloud/bigquery');

const projectId = 'PROJECT_ID';
const datasetId = 'DATASET_ID';
const tableId ='TABLE_ID';

const bigquery = new BigQuery();
const query = `SELECT * FROM ${projectId}.${datasetId}.${tableId} WHERE user_id = 'USER_ID'`;

async function getUserData(userId) {
  const options = {
    query: query.replace('USER_ID', userId),
    location: 'US',
  };
  const [rows] = await bigquery.query(options);
  return rows;
}

#
The getUserData function takes a userId parameter and queries a BigQuery table to retrieve user data for that user. 
The function returns a Promise that resolves to an array of rows, where each row represents a user data record.
