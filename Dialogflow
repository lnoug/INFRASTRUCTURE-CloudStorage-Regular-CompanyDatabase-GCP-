const dialogflow = require('dialogflow');
const uuid = require('uuid');

const projectId = 'PROJECT_ID';
const sessionId = uuid.v4();
const sessionClient = new dialogflow.SessionsClient();

function processQuery(query) {
  const sessionPath = sessionClient.sessionPath(projectId, sessionId);
  const request = {
    session: sessionPath,
    queryInput: {
      text: {
        text: query,
        languageCode: 'en-US',
      },
    },
  };
  return sessionClient.detectIntent(request);
}

#
The processQuery function takes a query parameter, which represents the user's query text. 
The function creates a session with the Dialogflow API and sends the user query to Dialogflow using the detectIntent method.
The function returns a Promise that resolves to the chatbot response.
